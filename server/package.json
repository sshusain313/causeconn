{
  "name": "causeconnect-server",
  "version": "1.0.0",
  "description": "Backend server for CauseConnect application",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node -e \"try { require('./dist/index.js') } catch(e) { console.log('Compiled code not found, using ts-node instead'); require('ts-node/register'); require('./src/index.ts'); }\"",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "seed": "ts-node src/scripts/seedAdmin.ts",
    "postinstall": "npm run build"
  },
  "keywords": [
    "causeconnect",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "",
  "license": "ISC",

    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.1",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.14.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.0",
    "multer": "^2.0.0",
    "nodemailer": "^6.9.9",
    "pdfkit": "^0.17.1",
